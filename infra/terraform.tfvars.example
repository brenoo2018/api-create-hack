# Example Terraform variables for api-create-hack
# Copy this file to terraform.tfvars and fill in your actual values

# General Configuration
project_name = "api-create-hack"
environment  = "dev"
aws_region   = "us-east-1"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# EC2 Configuration
instance_type = "t3.micro"  # Cost-optimized for MVP, can scale to t3.small, t3.medium for production
key_pair_name = "your-aws-key-pair-name"  # Replace with your AWS Key Pair name

# Application Configuration
app_port = 3333

# Environment Variables for Application
# Replace with your actual values from .env
database_url      = ""
direct_url        = ""
apologist_base_url = ""
apologist_api_key  = ""
