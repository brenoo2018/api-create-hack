# AWS Configuration
aws_region = "us-east-1"
aws_account_id = "your-aws-account-id"

# Project Configuration  
project_name = "api-create-hack"
environment = "dev"

# EC2 Configuration
instance_type = "t3.micro"
key_pair_name = "your-key-pair-name"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
availability_zones = ["us-east-1a", "us-east-1b"]

# Application Configuration
app_port = 80
container_port = 3333

# Database Configuration
database_url = "postgresql://user:password@host:5432/dbname"

# JWT Configuration
jwt_secret = "your-jwt-secret-key"

# Apologist AI Configuration
apologist_api_key = "your-apologist-api-key"
apologist_base_url = "https://createhack-grupo-15.apologetics.bot"

# ECR Configuration
ecr_repository_url = "${aws_account_id}.dkr.ecr.${aws_region}.amazonaws.com/${project_name}-${environment}"
